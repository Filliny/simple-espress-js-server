<link rel="stylesheet" href="/css/login.css">
<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->

        <!-- Icon -->
        <div class="fadeIn first">
            <img src="/img/userdefault.svg" id="icon" alt="User Icon" />
        </div>

        <!-- Login Form -->
        <form action="/account/recovery" method="post" >
            <input type="text" id="email" class="fadeIn second" name="email" placeholder="email"
                   pattern="[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?" required>
            <input type="submit" class="fadeIn fourth" value="Submit">
        </form>

        <!-- Remind Passowrd -->
        <div id="formFooter">
            <p class=".footer_text" >Forgot Password? No problem! Enter your email address below, and we will send U a link ro reset password. </p>
        </div>

    </div>
</div>